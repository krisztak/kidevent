# Environment Configuration Template
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL="postgresql://kidevent_user:kidevent_password@localhost:5432/kidevent_dev"

# Server Configuration
PORT=5000
NODE_ENV=development
SESSION_SECRET="change-this-to-a-secure-random-string-in-production"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:5000"

# Redis Configuration (optional)
REDIS_URL="redis://localhost:6379"

# Replit OAuth Configuration (optional)
REPL_ID=""
ISSUER_URL="https://replit.com/oidc"
REPLIT_DOMAINS="localhost:3000,localhost:5000"

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info

# Production Database Configuration (for docker-compose.prod.yml)
DB_USER=kidevent_user
DB_PASSWORD=secure_password_change_me
REDIS_PASSWORD=secure_redis_password_change_me